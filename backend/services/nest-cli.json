{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/carbon-registry-services-namibia/src",
  "compilerOptions": {
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true,
        "outDir": "dist"
      },
      {
        "include": "i18n/**/*",
        "watchAssets": true,
        "outDir": ".build/src"
      }
    ],
    "webpack": true,
    "tsConfigPath": "apps/carbon-registry-services-namibia/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/carbon-registry-services-namibia",
  "projects": {
    "carbon-registry-services-namibia": {
      "type": "application",
      "root": "apps/carbon-registry-services-namibia",
      "entryFile": "main",
      "sourceRoot": "apps/carbon-registry-services-namibia/src",
      "compilerOptions": {
        "tsConfigPath": "apps/carbon-registry-services-namibia/tsconfig.app.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "custodian": {
      "type": "application",
      "root": "apps/custodian",
      "entryFile": "main",
      "sourceRoot": "apps/custodian/src",
      "compilerOptions": {
        "tsConfigPath": "apps/custodian/tsconfig.app.json"
      }
    },
    "api-lib": {
      "type": "library",
      "root": "libs/api-lib",
      "entryFile": "index",
      "sourceRoot": "libs/api-lib/src",
      "compilerOptions": {
        "tsConfigPath": "libs/api-lib/tsconfig.lib.json"
      }
    },
    "common-lib": {
      "type": "library",
      "root": "libs/common-lib",
      "entryFile": "index",
      "sourceRoot": "libs/common-lib/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common-lib/tsconfig.lib.json"
      }
    },
    "custodian-lib": {
      "type": "library",
      "root": "libs/custodian-lib",
      "entryFile": "index",
      "sourceRoot": "libs/custodian-lib/src",
      "compilerOptions": {
        "tsConfigPath": "libs/custodian-lib/tsconfig.lib.json"
      }
    }
  }
}